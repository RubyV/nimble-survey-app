<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewPurpleLarge">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EditTextWhite">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/White</item>
    </style>

    <style name="TextViewBlack">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewWhiteLarge">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ButtonFilled">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:background">#fff</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Black</item>
    </style>

</resources>
